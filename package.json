{
  "name": "game-stats-ui-manager",
  "version": "1.0.0",
  "description": "Manage the game stats displayed on the app details page. Suports changing order, visibility, and adding a few additional stats.",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "check": "pnpx @biomejs/biome check --write"
  },
  "repository": "git+https://github.com/RedHatter/game-stats-ui-manager.git",
  "keywords": ["decky", "plugin", "steam-deck", "deck", "stats"],
  "author": "Ava Johnson <ava.johnson@zohomail.com>",
  "license": "BSD-3-Clause",
  "bugs": "https://github.com/RedHatter/game-stats-ui-manager/issues",
  "homepage": "https://github.com/RedHatter/game-stats-ui-manager#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@decky/rollup": "^1.0.1",
    "@decky/ui": "^4.9.2",
    "@types/react": "18.3.3",
    "@types/react-dom": "^18.3.3",
    "@types/webpack": "^5.28.5",
    "rollup": "^4.38.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@decky/api": "^1.1.2",
    "@tanstack/react-store": "^0.7.0",
    "react-icons": "^5.5.0",
    "tslib": "^2.8.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["react", "react-dom"]
    }
  }
}
